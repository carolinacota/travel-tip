<div class='city-banner'>
  <img src="https://source.unsplash.com/random/?<%=@city.name%>" alt="">
  <img src="https://image.freepik.com/free-vector/street-map-with-pin-routes_23-2147622544.jpg" alt="" class="modal-img" data-toggle="modal" data-target="#myModal">
</div>
<div class="container">
  <div class="city-name">
    <h1><%= @city.name.capitalize %></h1>
    <h3>Discover <%= @city.name.capitalize %> TOP tips</h3>
  </div>
      <% @city.places.each do |place| %>
      <div class="tip-card m-2">
        <img src="https://source.unsplash.com/random/?food" alt="" class="image">
        <div class="text ml-3">
          <h2><%= place.name %></h2>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <p>Tipper's say:</p>
          <p>"Great place!"</p>
        </div>
      </div>
      <% end %>
    </div>
</div>







<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-xl">

    <!-- Modal content-->
    <div class="modal-content">

     <div
          id="map"
          style="
          height: 75vh;
          overflow: visible;
          margin-left: -4%;
          margin-top: -4%;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
          style="border: 1px solid black"
        ></div>

    </div>

  </div>
</div>
