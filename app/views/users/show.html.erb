<div class="container">
  <div class="d-flex row">
    <div class="text-center">
      <div class="image">
       <%= image_tag("pretty.jpg", :alt => "user pic", :class => "avatar-large") %>
      </div>
      <div class="col">
        <h1><%= @user.username %></h1>
        <h4>"<%= @user.bio %>"</h4>
      </div>
      <div class="d-flex text-center">
        <i class="far fa-heart align middle p-1">  </i>
        <p class="align-middle"><small> 223 followers </small></p>
      </div>
    </div>
  </div>
  <div class="lists">
    <ul class="nav nav-pills m-4 p-2 align middle" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="pills-list-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">My Lists</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-wishlist-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">WishLists</a>
      </li>
    </ul>
    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
       <% @lists.each do |list| %>
        <div class="d-flex city-card">
          <img src="https://source.unsplash.com/random/?<%=list.city.name%>" alt="" class="align middle">
          <h2 class="align middle p-3"><%= list.city.name %></h2>
        </div>
      <% end %>
      </div>
      <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">...
      </div>
    </div>
  </div>
</div>

