<div class="tip-card m-2">
  <img src="https://source.unsplash.com/random/?food" alt="" class="image">
  <div class="place-card-text  ml-3" style="height: 24vh">
    <div class="d-flex">
      <div class="place-name flex-grow-1">
        <h4><%= link_to place.name, city_place_path(place.city, place) %></h4>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
      </div>
    </div>
    <div class="card-tips">
      <p class="mt-2" style="font-size: 15px">"<%= place.get_user_tip(@list.user).content %>"</p>
    </div>
  </div>
</div>
