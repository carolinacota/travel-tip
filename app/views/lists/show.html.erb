<div class='city-banner' style="background-image: url(<%= url_for(@city.photo) %>)">
  <img src="https://image.freepik.com/free-vector/street-map-with-pin-routes_23-2147622544.jpg" alt="" class="modal-img" data-toggle="modal" data-target="#myModal">
</div>
<div class="container">
  <div class="city-name">
    <h1><%= @city.name %></h1>
    <% if @list.is_wishlist? %>
      <h3>Your Wishlist</h3>
      <p style="color: $pink; opacity: 0.6"><small>Go on and add some tips!</small></p>
    <% else %>
        <%if @user == current_user %>
          <h3>My Tips</h3>
        <%else %>
          <h3><%= @list.user.username %>'s Tips</h3>
        <% end %>
    <% end %>
  </div>
<%= render 'places/list', places: @list.places, is_wishlist: @list.is_wishlist %>

