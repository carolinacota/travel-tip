
<% lists.each do |list| %>
  <%= link_to city_list_path(list.city, list) do %>
    <div class="d-flex city-card mt-2">
      <img src="https://source.unsplash.com/random/?<%=list.city.name%>" class="image-list">
      <div class="list-card-info">
        <h4 class="mt-2 ml-2 list-name"><%= list.city.name.capitalize %></h4>
        <div class="flex row ml-2 list-card-icons">
          <% count = list.places.count {|place| place.category.name == "Food & Drinks"} %>
            <div class="d-flex mr-2">
              <i class="fas fa-utensils align middle p-2">  </i>
              <p class="align-middle"><small> <%= count %>
              </small></p>
            </div>
          <% count = list.places.count {|place| place.category.name == "Sights & attractions"} %>
            <div class="d-flex mr-2">
              <i class="fas fa-map-pin middle p-2"></i>
              <p class="align-middle"><small><%= count%>
                </small></p>
            </div>
          <% count = list.places.count {|place| place.category.name == "Entertainment"} %>
            <div class="d-flex mr-2">
              <i class="fas fa-child align middle p-2">  </i>
              <p class="align-middle"><small><%= count %>
              </small></p>
            </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
